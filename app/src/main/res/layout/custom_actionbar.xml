<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:fitsSystemWindows="true"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/actionbar_cookie"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/selector_action_bar_nbt"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:scaleType="fitCenter" />

    <ImageButton
        android:id="@+id/actionbar_prev"
        android:layout_width="17dp"
        android:layout_height="17dp"
        android:src="@drawable/arrow_prev_disable"
        android:scaleType="fitCenter"
        android:layout_marginLeft="80dp"
        android:background="@android:color/white"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@id/actionbar_cookie"
        app:layout_constraintRight_toLeftOf="@id/actionbar_sort" />

    <TextView
        android:id="@+id/actionbar_sort"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@id/actionbar_prev"
        app:layout_constraintRight_toLeftOf="@id/actionbar_next"
        android:gravity="center"
        android:textSize="20sp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:text="인기순"/>

    <ImageButton
        android:id="@+id/actionbar_next"
        android:layout_width="17dp"
        android:layout_height="17dp"
        android:scaleType="fitCenter"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@android:color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@id/actionbar_sort"
        app:layout_constraintRight_toRightOf="parent"
        android:src="@drawable/arrow_next_normal"/>

</androidx.constraintlayout.widget.ConstraintLayout>
