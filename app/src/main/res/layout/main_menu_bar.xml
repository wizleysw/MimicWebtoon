<LinearLayout
    android:id="@+id/pager_bar_btn_layout"
    android:layout_width="match_parent"
    android:layout_height="30dp"
    android:orientation="horizontal"
    android:gravity="center"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:id="@+id/pager_bar_new_bg"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_weight="1.5"
        android:gravity="center"
        android:orientation="horizontal">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/pager_bar_new"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                app:layout_constraintRight_toLeftOf="@id/new_img"
                android:text="신작"/>

            <ImageView
                android:id="@+id/new_img"
                android:layout_width="7dp"
                android:paddingLeft="1dp"
                android:paddingTop="2dp"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="@id/pager_bar_new"
                app:layout_constraintLeft_toRightOf="@id/pager_bar_new"
                android:src="@drawable/icon_daily_newtab_unselected" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </LinearLayout>

    <ImageView
        android:layout_width="2dp"
        android:layout_height="match_parent"
        android:src="@drawable/my_text_divider"/>

    <TextView
        android:id="@+id/pager_bar_mon"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:text="월"/>

    <TextView
        android:id="@+id/pager_bar_tue"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:text="화"/>

    <TextView
        android:id="@+id/pager_bar_wed"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:text="수"/>

    <TextView
        android:id="@+id/pager_bar_thu"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:text="목"/>

    <TextView
        android:id="@+id/pager_bar_fri"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:text="금"/>

    <TextView
        android:id="@+id/pager_bar_sat"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:text="토"/>

    <TextView
        android:id="@+id/pager_bar_sun"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:text="일"/>

    <TextView
        android:id="@+id/pager_bar_fin"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_weight="1.5"
        android:gravity="center"
        android:text="완결"/>

    <TextView
        android:layout_width="0dp"
        android:layout_height="match_parent"/>

</LinearLayout>